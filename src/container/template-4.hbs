<header class="header">
    <div class="">
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h2 class="main_title">{{heading}}</h2>
        <p class="main_text">{{descriotion}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</div>

{{> divider}}


<div class="actions">
    {{#each actions}}
    {{> cardAction data=this}}
    {{/each}}
</div>

<footer class="footer">
    <div class="">
        {{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>